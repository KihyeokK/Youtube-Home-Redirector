{
    "manifest_version": 3,
    "name": "Youtube-Home-Redirector",
    "description": "Redirects Youtube Home Page to another page.",
    "version": "1.0",
    "icons": {"128": "youtube_redirect_logo.png"},
    "background": {
        "service_worker": "background.js",
        "runAt": "document_start"
      },  
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["contentScript.js"]
        }
    ],
    "action": {
        "default_icon": "youtube_redirect_logo.png",
        "default_popup": "popup.html"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "permissions": ["webRequest", "activeTab", "storage", "tabs", "declarativeNetRequest"],
    "host_permissions": ["*://*/*"]

  }